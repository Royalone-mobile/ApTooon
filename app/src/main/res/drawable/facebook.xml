<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners

                android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />
            <solid android:color="#993B5998" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="250dp" android:height="37dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />
            <solid android:color="#3B5998" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="250dp" android:height="37dp" />
            <stroke android:width="3dp" android:color="#3B5998" />
        </shape>
    </item>
</selector>

