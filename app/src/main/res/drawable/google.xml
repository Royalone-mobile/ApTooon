<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
            <solid android:color="#99F7260F" />
            <size android:width="250dp" android:height="37dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
            <solid android:color="#F7260F" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="250dp" android:height="37dp" />
            <stroke android:width="3dp" android:color="#F7260F" />
        </shape>
    </item>
</selector>

